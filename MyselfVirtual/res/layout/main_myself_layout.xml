<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dj.myselfvirtual.MainMyselfActivity" >

    <ImageButton
        android:id="@+id/btnImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etQuestion"
        android:layout_centerHorizontal="true"
        android:src="@drawable/appdp" 
        android:onClick="answer"/>

    <Button
        android:id="@+id/btnTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Tap to Ask" 
        android:onClick="speak"/>

    <EditText
        android:id="@+id/etQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTap"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:gravity="center_horizontal"
        android:hint="See Your Question here"
        android:inputType="textPostalAddress" >

        <requestFocus />
    </EditText>

</RelativeLayout>
